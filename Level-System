let player = {
  name: "Spieler",
  level: 1,
  experience: 0,
  maxHealth: 100,
  currentHealth: 100,
  attack: 10,
  defense: 5
};

// Funktion zum Level-Up des Spielers
function levelUp(player) {
  player.level++;
  player.maxHealth += 10;
  player.currentHealth = player.maxHealth;
  player.attack += 5;
  player.defense += 2;
  console.log(player.name + " hat Level " + player.level + " erreicht!");
}

// Funktion zum Hinzufügen von Erfahrungspunkten
function addExperience(player, exp) {
  player.experience += exp;

  // Überprüfe, ob der Spieler genug Erfahrungspunkte zum Level-Up hat
  if (player.experience >= player.level * 100) {
    levelUp(player);
  }
}

// Beispielverwendung
console.log(player.name + " startet auf Level " + player.level);
addExperience(player, 50); // Füge 50 Erfahrungspunkte hinzu
console.log(player.name + " hat " + player.experience + " Erfahrungspunkte");
addExperience(player, 150); // Füge 150 Erfahrungspunkte hinzu
console.log(player.name + " hat " + player.experience + " Erfahrungspunkte");
